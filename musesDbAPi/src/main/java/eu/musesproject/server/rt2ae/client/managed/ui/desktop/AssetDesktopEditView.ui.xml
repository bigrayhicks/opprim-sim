<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:e="urn:import:eu.musesproject.server.rt2ae.client.managed.ui.editor" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:eu.musesproject.server.rt2ae.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit Asset</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New Asset</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>
    <table class="{style.fields}" id="boundElementHolder">
    	
      	<tr id="riskinformations">
      		<td>
                    <div class="{style.label}">Riskinformations:</div>
                </td>
      		<td>
                    <e:RiskinformationSetEditor ui:field="riskinformations"/>
                </td>
      	</tr>
      	
      	<tr id="securityIncidents">
      		<td>
                    <div class="{style.label}">Security Incidents:</div>
                </td>
      		<td>
                    <e:SecurityIncidentSetEditor ui:field="securityIncidents"/>
                </td>
      	</tr>
      	
      	<tr id="accessrequestId">
      		<td>
                    <div class="{style.label}">Accessrequest Id:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="accessrequestId"/>
                </td>
      	</tr>
      	
      	<tr id="opportunityid">
      		<td>
                    <div class="{style.label}">Opportunityid:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="opportunityid"/>
                </td>
      	</tr>
      	
      	<tr id="assetName">
      		<td>
                    <div class="{style.label}">Asset Name:</div>
                </td>
      		<td>
                    <g:TextBox ui:field="assetName"/>
                </td>
      	</tr>
      	
      	<tr id="description">
      		<td>
                    <div class="{style.label}">Description:</div>
                </td>
      		<td>
                    <g:TextBox ui:field="description"/>
                </td>
      	</tr>
      	
      	<tr id="value">
      		<td>
                    <div class="{style.label}">Value:</div>
                </td>
      		<td>
                    <g:DoubleBox ui:field="value"/>
                </td>
      	</tr>
      	
      	<tr id="confidentialLevel">
      		<td>
                    <div class="{style.label}">Confidential Level:</div>
                </td>
      		<td>
                    <g:TextBox ui:field="confidentialLevel"/>
                </td>
      	</tr>
      	
      	<tr id="location">
      		<td>
                    <div class="{style.label}">Location:</div>
                </td>
      		<td>
                    <g:TextBox ui:field="location"/>
                </td>
      	</tr>
      	
    </table>
    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
