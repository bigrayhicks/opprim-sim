<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:e="urn:import:eu.musesproject.server.rt2ae.client.managed.ui.editor" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:eu.musesproject.server.rt2ae.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit User</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New User</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>
    <table class="{style.fields}" id="boundElementHolder">
    	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
    
            
            
            
            
            
            
            
        <tr id="accessrequests">
      		<td>
                    <div class="{style.label}">Accessrequests:</div>
                </td>
      		<td>
                    <e:AccessrequestSetEditor ui:field="accessrequests"/>
                </td>
      	</tr>
            <tr id="devices">
      		<td>
                    <div class="{style.label}">Devices:</div>
                </td>
      		<td>
                    <e:DeviceSetEditor ui:field="devices"/>
                </td>
      	</tr>
            <tr id="securityIncidents">
      		<td>
                    <div class="{style.label}">Security Incidents:</div>
                </td>
      		<td>
                    <e:SecurityIncidentSetEditor ui:field="securityIncidents"/>
                </td>
      	</tr>
            <tr id="name">
      		<td>
                    <div class="{style.label}">Name:</div>
                </td>
      		<td>
                    <g:TextBox ui:field="name"/>
                </td>
      	</tr>
            <tr id="surname">
      		<td>
                    <div class="{style.label}">Surname:</div>
                </td>
      		<td>
                    <g:TextBox ui:field="surname"/>
                </td>
      	</tr>
            <tr id="email">
      		<td>
                    <div class="{style.label}">Email:</div>
                </td>
      		<td>
                    <g:TextBox ui:field="email"/>
                </td>
      	</tr>
            <tr id="trustvalue">
      		<td>
                    <div class="{style.label}">Trustvalue:</div>
                </td>
      		<td>
                    <g:DoubleBox ui:field="trustvalue"/>
                </td>
      	</tr>
            <tr id="hourlyCost">
      		<td>
                    <div class="{style.label}">Hourly Cost:</div>
                </td>
      		<td>
                    <g:DoubleBox ui:field="hourlyCost"/>
                </td>
      	</tr>
        </table>
    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
