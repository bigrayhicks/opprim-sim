<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:e="urn:import:eu.musesproject.server.rt2ae.client.managed.ui.editor" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:eu.musesproject.server.rt2ae.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit Accessrequest</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New Accessrequest</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>
    <table class="{style.fields}" id="boundElementHolder">
    	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
    
            
            
            
            
            
            
            
            
            
        <tr id="assets">
      		<td>
                    <div class="{style.label}">Assets:</div>
                </td>
      		<td>
                    <e:AssetSetEditor ui:field="assets"/>
                </td>
      	</tr>
            <tr id="riskinformations">
      		<td>
                    <div class="{style.label}">Riskinformations:</div>
                </td>
      		<td>
                    <e:RiskinformationSetEditor ui:field="riskinformations"/>
                </td>
      	</tr>
            <tr id="opportunityId">
      		<td>
                    <div class="{style.label}">Opportunity Id:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="opportunityId"/>
                </td>
      	</tr>
            <tr id="deviceId">
      		<td>
                    <div class="{style.label}">Device Id:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="deviceId"/>
                </td>
      	</tr>
            <tr id="userId">
      		<td>
                    <div class="{style.label}">User Id:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="userId"/>
                </td>
      	</tr>
            <tr id="riskcommunicationid">
      		<td>
                    <div class="{style.label}">Riskcommunicationid:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="riskcommunicationid"/>
                </td>
      	</tr>
            <tr id="threatid">
      		<td>
                    <div class="{style.label}">Threatid:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="threatid"/>
                </td>
      	</tr>
            <tr id="useractionId">
      		<td>
                    <div class="{style.label}">Useraction Id:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="useractionId"/>
                </td>
      	</tr>
            <tr id="solved">
      		<td>
                    <div class="{style.label}">Solved:</div>
                </td>
      		<td>
                    <r:ShortBox ui:field="solved"/>
                </td>
      	</tr>
            <tr id="riskcommunicationId">
      		<td>
                    <div class="{style.label}">Riskcommunication Id:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="riskcommunicationId"/>
                </td>
      	</tr>
        </table>
    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
