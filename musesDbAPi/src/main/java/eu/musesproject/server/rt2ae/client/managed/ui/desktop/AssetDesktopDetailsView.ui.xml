<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
 <ui:style>
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
  <g:HTMLPanel>
    <div class="{style.underline}">
      <h3 class="{style.header}">
                <ui:msg>
                    <span ui:field="displayRenderer"/>
                </ui:msg>
            </h3>
    </div>

    <table class="{style.fields}" id="boundElementHolder">
      
      <tr id="assetId">
                <td>
                    <span class="{style.label}">Asset Id:</span>
                </td>
                <td>
                    <span ui:field="assetId"/>
                </td>
            </tr>
      
      <tr id="riskinformations">
                <td>
                    <span class="{style.label}">Riskinformations:</span>
                </td>
                <td>
                    <span ui:field="riskinformations"/>
                </td>
            </tr>
      
      <tr id="securityIncidents">
                <td>
                    <span class="{style.label}">Security Incidents:</span>
                </td>
                <td>
                    <span ui:field="securityIncidents"/>
                </td>
            </tr>
      
      <tr id="accessrequestId">
                <td>
                    <span class="{style.label}">Accessrequest Id:</span>
                </td>
                <td>
                    <span ui:field="accessrequestId"/>
                </td>
            </tr>
      
      <tr id="opportunityid">
                <td>
                    <span class="{style.label}">Opportunityid:</span>
                </td>
                <td>
                    <span ui:field="opportunityid"/>
                </td>
            </tr>
      
      <tr id="assetName">
                <td>
                    <span class="{style.label}">Asset Name:</span>
                </td>
                <td>
                    <span ui:field="assetName"/>
                </td>
            </tr>
      
      <tr id="description">
                <td>
                    <span class="{style.label}">Description:</span>
                </td>
                <td>
                    <span ui:field="description"/>
                </td>
            </tr>
      
      <tr id="value">
                <td>
                    <span class="{style.label}">Value:</span>
                </td>
                <td>
                    <span ui:field="value"/>
                </td>
            </tr>
      
      <tr id="confidentialLevel">
                <td>
                    <span class="{style.label}">Confidential Level:</span>
                </td>
                <td>
                    <span ui:field="confidentialLevel"/>
                </td>
            </tr>
      
      <tr id="location">
                <td>
                    <span class="{style.label}">Location:</span>
                </td>
                <td>
                    <span ui:field="location"/>
                </td>
            </tr>
      
    </table>

  <div class="{style.bar}">
    <g:Button addStyleNames="{style.button}" ui:field="edit">Edit</g:Button>
    <g:Anchor ui:field="delete">Delete</g:Anchor>
   </div>
  </g:HTMLPanel>
</ui:UiBinder>
