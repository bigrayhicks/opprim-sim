<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:e="urn:import:eu.musesproject.server.rt2ae.client.managed.ui.editor" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:eu.musesproject.server.rt2ae.client.scaffold.ui">

  <ui:style>
   .errors {
      padding-left: 0.5em;
      background-color: red;
    }
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
 
  <g:HTMLPanel>
    <div class="{style.underline}">    
      <h3 class="{style.header}" ui:field="editTitle">
        <ui:msg>Edit DeviceSecurityState</ui:msg>
      </h3>
      <h3 class="{style.header}" ui:field="createTitle">
                <ui:msg>New DeviceSecurityState</ui:msg>
            </h3>
    </div>
    <div class="{style.errors}" ui:field="errors"/>
    <table class="{style.fields}" id="boundElementHolder">
    	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
      	
    
            
            
            
            
            
            
            
            
            
        
            
            
            
            
            
            
            
            
            
        <tr id="deviceId">
      		<td>
                    <div class="{style.label}">Device Id:</div>
                </td>
      		<td>
                    <g:ValueListBox ui:field="deviceId"/>
                </td>
      	</tr>
            <tr id="devicestate">
      		<td>
                    <div class="{style.label}">Devicestate:</div>
                </td>
      		<td>
                    <g:TextBox ui:field="devicestate"/>
                </td>
      	</tr>
            <tr id="antivirus">
      		<td>
                    <div class="{style.label}">Antivirus:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="antivirus"/>
                </td>
      	</tr>
            <tr id="passwordprotection">
      		<td>
                    <div class="{style.label}">Passwordprotection:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="passwordprotection"/>
                </td>
      	</tr>
            <tr id="autolock">
      		<td>
                    <div class="{style.label}">Autolock:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="autolock"/>
                </td>
      	</tr>
            <tr id="sslprotection">
      		<td>
                    <div class="{style.label}">Sslprotection:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="sslprotection"/>
                </td>
      	</tr>
            <tr id="encryption">
      		<td>
                    <div class="{style.label}">Encryption:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="encryption"/>
                </td>
      	</tr>
            <tr id="trackingdevice">
      		<td>
                    <div class="{style.label}">Trackingdevice:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="trackingdevice"/>
                </td>
      	</tr>
            <tr id="remotewipe">
      		<td>
                    <div class="{style.label}">Remotewipe:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="remotewipe"/>
                </td>
      	</tr>
            <tr id="vpn">
      		<td>
                    <div class="{style.label}">Vpn:</div>
                </td>
      		<td>
                    <g:IntegerBox ui:field="vpn"/>
                </td>
      	</tr>
        </table>
    <div class="{style.bar}">
      <g:Button addStyleNames="{style.button}" ui:field="save">Save</g:Button>
      <g:Button addStyleNames="{style.button}" ui:field="cancel">Cancel</g:Button>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>
