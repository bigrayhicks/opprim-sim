<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
 <ui:style>
    .fields {
      margin-top: 0.5em;
      margin-left: 1em;
    }
    .label {
      min-height: 25px;
      font-weight: bold;
    }
    .button {
      margin-right: 1em;
    }
    .bar {
      margin-left: 1em;
    }
    .header {
      margin-left: 1em;
      color: #4B4A4A;
      text-shadow: #ddf 1px 1px 0;
      margin-bottom: 0;
    }
    .underline {
      border-bottom: 2px solid #6F7277;
    }
  </ui:style>
  <g:HTMLPanel>
    <div class="{style.underline}">
      <h3 class="{style.header}">
                <ui:msg>
                    <span ui:field="displayRenderer"/>
                </ui:msg>
            </h3>
    </div>

    <table class="{style.fields}" id="boundElementHolder">
      
      <tr id="riskcommunicationId">
                <td>
                    <span class="{style.label}">Riskcommunication Id:</span>
                </td>
                <td>
                    <span ui:field="riskcommunicationId"/>
                </td>
            </tr>
      
      <tr id="accessrequests">
                <td>
                    <span class="{style.label}">Accessrequests:</span>
                </td>
                <td>
                    <span ui:field="accessrequests"/>
                </td>
            </tr>
      
      <tr id="decisions">
                <td>
                    <span class="{style.label}">Decisions:</span>
                </td>
                <td>
                    <span ui:field="decisions"/>
                </td>
            </tr>
      
      <tr id="risktreatments">
                <td>
                    <span class="{style.label}">Risktreatments:</span>
                </td>
                <td>
                    <span ui:field="risktreatments"/>
                </td>
            </tr>
      
      <tr id="textualDescription">
                <td>
                    <span class="{style.label}">Textual Description:</span>
                </td>
                <td>
                    <span ui:field="textualDescription"/>
                </td>
            </tr>
      
    </table>

  <div class="{style.bar}">
    <g:Button addStyleNames="{style.button}" ui:field="edit">Edit</g:Button>
    <g:Anchor ui:field="delete">Delete</g:Anchor>
   </div>
  </g:HTMLPanel>
</ui:UiBinder>
